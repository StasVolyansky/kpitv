@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    @{ var loginProvider = SignInManager.GetExternalAuthenticationSchemes().First();
    <div>
        <button type="submit" class="btn btn-default" name="provider" value="@loginProvider.AuthenticationScheme" title="Log in using your @loginProvider.DisplayName account">@loginProvider.AuthenticationScheme</button>
    </div>
    }
</form>